            step = 0
            $('#edit').text("Далее");
            $('#CreateModal').modal('show');
        }

        function loadForms() {
            var start = $('#ClientStartDate').val();
            var end = $('#ClientEndDate').val();
            $('#rooms').load("../Reservation/Forms?&startDate=" + start + "&endDate=" + end);
        }
    </script>
</body>
