@using HotelReservation.Models;
@{
    ViewData["Title"] = "Сервисы";
}

<body>
    <div class="container">
        <div class="alert alert-info">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <div class="text-center">
                <h5>Документация по сервисам</h5>
            </div>
            <div class="row">
                <p>
                    В приложении можно добавлять услуги к брони. К каждой услуге приписывается
                    своя стоимость. Также услуги можно создавать, редактировать и удалять.
                </p>
            </div>
        </div>
        <div class="row">
        <div class="col-md-7">
        <div class="jumbotron">
            <table class="table table-striped table-responsive-sm table-responsive-xl table-bordered table-responsive-md">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            <div class="text-center">
                                <h6>ID</h6>
                            </div>
                        </th>
                        <th>
                            <div class="text-center">
                                <h6>Название</h6>
                            </div>
                        </th>
                        <th>
                            <div class="text-center">
                                <h6>Стоимость</h6>
                            </div>
                        </th>
                        <th>
                            <div class="text-center">
                                <button class="btn btn-success">
                                    Создать&#10133;
                                </button>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Service item in (List<Service>)ViewData["Services"])
                    {
                        <tr>
                            <td class="table-info">
                                <div class="text-center">
                                    <strong>@item.ServiceId</strong>
                                </div>
                            </td>
                            <td>
                                <div class="text-center">
                                    <strong>@item.Name</strong>
                                </div>
                            </td>
                            <td>
                                <div class="text-center">
                                    <strong>@item.Cost</strong>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group btn-block">
                                    <button class="btn btn-info">
                                        &#9999;
                                    </button>
                                    <button class="btn btn-danger">
                                        &#128465;
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div class="btn-group text-center btn-block">
                <button class="btn btn-outline-info">
                    &#171;
                </button>
                <button class="btn btn-outline-info">
                    1
                </button>
                <button class="btn btn-outline-info">
                    2
                </button>
                <button class="btn btn-outline-info">
                    3
                </button>
                <button class="btn btn-outline-info">
                    &#187;
                </button>
            </div>
        </div>
        </div>
        <div class="col-md-5">
            <div class="jumbotron">

            </div>
        </div>
        </div>

    </div>
</body>
