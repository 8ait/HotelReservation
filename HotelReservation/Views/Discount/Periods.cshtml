@using HotelReservation.Models;
@{
    Layout = null;
}
<head>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="text-center">
        <div class="btn-group btn-block btn-group-lg justify-content-center">

            <button type="button" class="btn btn-outline-success navbar-btn" onclick="UpdateDays()">Дни недели &#128197;</button>
            <button type="button" class="btn btn-outline-success navbar-btn active" onclick="location.href = '#'">Периоды &#128336;</button>

        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <div id="modDialog" class="modal fade">
                    <div id="dialogContent" class="modal-dialog"></div>
                </div>
                <div class="list-group">
                    @foreach (Duration item in (IEnumerable<Duration>)ViewData["Collection"])
                    {
                        <button class="list-group-item list-group-item-success list-group-item-action d-flex justify-content-between align-items-center" value="@item.DurationId |@item.Discount" id="@item.DurationId" onclick="ShowModalPeriod(@item.DurationId)">
                            @if (item.DurationId == 0)
                            {
                                <strong>От 0 до 4 дней</strong>
                            }
                            else if (item.DurationId == 1)
                            {
                                <strong>От 5 до 9 дней</strong>
                            }
                            else if (item.DurationId == 2)
                            {
                                <strong>От 10 до 14 дней</strong>
                            }
                            else if (item.DurationId == 3)
                            {
                                <strong>От 15 до 19 дней</strong>
                            }
                            else if (item.DurationId == 4)
                            {
                                <strong>От 20 до 24 дней</strong>
                            }
                            else if (item.DurationId == 5)
                            {
                                <strong>От 25 до 29 дней</strong>
                            }
                            else if (item.DurationId == 6)
                            {
                                <strong>От 30 дней и больше</strong>
                            }
                            <span class="badge badge-success badge-pill">@item.Discount</span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

