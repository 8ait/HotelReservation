<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="text-center font-weight-bold">
            <h2>Royal Palace Inn</h2>
        </div>
        <nav class="navbar navbar-default">
            <div class="btn-group btn-block btn-lg">
                <button type="button" class="btn btn-dark navbar-btn" onclick="location.href='@Url.Action("Index")'">Главная</button>
                <button type="button" class="btn btn-dark navbar-btn" onclick="location.href='@Url.Action("Index")'">Клиенты</button>
                <button type="button" class="btn btn-dark navbar-btn" onclick="location.href='@Url.Action("Index")'">Бронь</button>
                <button type="button" class="btn btn-dark navbar-btn" onclick="location.href='@Url.Action("Index")'">Номера</button>
                <button type="button" class="btn btn-dark navbar-btn" onclick="location.href='@Url.Action("Index")'">Сервисы</button>
                <button type="button" class="btn btn-dark navbar-btn" onclick="location.href='@Url.Action("Index")'">Скидки</button>                           
            </div>            
        </nav>


        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

        <footer class="footer">
            <div class="text-center font-weight-bold">
            &copy; 2019 Леонов и Никифоров.
            </div>
        </footer>

    </div>
</body>
</html>